{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",

    "module": "CommonJS",
    "moduleResolution": "node",

    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "noUncheckedSideEffectImports": false,

    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "controller/**/*.ts",
    "services/**/*.ts",
    "lib/**/*.ts"
  ]
}
